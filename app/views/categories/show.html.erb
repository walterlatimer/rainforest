<h1><%= @category.name %></h1>

<% @products.each do |product| %>
  <article class="product-module">
  <p><%= image_tag product.photo.url(:medium) %></p>
  <p>
    <strong><%= link_to product.name, product %></strong><br />
    $<%= product.formatted_price %>
  </p>
  </article>
<% end %>

<footer><%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %></footer>
