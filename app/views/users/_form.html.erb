<section class="login-form">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |message| %>
          <p class="error"><%= message %></p>
      <% end %>
  <% end %>

  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label 'Confirm' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label 'Display Name' %><br>
    <%= f.text_field :display %>
  </div>
  <div class="field">
  <%= f.label :photo %><br>
  <%= f.file_field :photo %>
  </div> 
  
    <%= f.hidden_field :access, value: 1 %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</section>